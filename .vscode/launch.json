    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Chrome",
            "request": "launch",
            "type": "pwa-chrome",
            "url": "http://localhost:8000",
            "webRoot": "${workspaceFolder}",
            "runtimeExecutable": "custom" // chromium
        },
        {
            "type": "pwa-node",
            "request": "launch",
            "name": "Launch bridge",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/bridge.js"
        }
    ]
}